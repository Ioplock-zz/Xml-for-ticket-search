<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/maps_and_flags" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fromTo" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fromTo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Slelect date 1:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <ImageView
                android:id="@+id/Left_d1"
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/back" />

            <Button
                android:id="@+id/Mon_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="1\nMON" />

            <Button
                android:id="@+id/Tue_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="2\nTUE" />

            <Button
                android:id="@+id/Wed_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="3\nWED" />

            <Button
                android:id="@+id/Thu_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:onClick="ClickFDate"
                android:text="4\nTHU" />

            <Button
                android:id="@+id/Fri_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="5\nFRI" />

            <Button
                android:id="@+id/Sat_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="6\nSAT" />

            <Button
                android:id="@+id/Sun_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClickFDate"
                android:text="7\nSUN" />

            <ImageView
                android:id="@+id/Right_d1"
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/right_thin_chevron" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Slelect date 2:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <ImageView
                android:id="@+id/Left_d2"
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/back" />

            <Button
                android:id="@+id/Mon_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="1\nMON" />

            <Button
                android:id="@+id/Tue_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="2\nTUE" />

            <Button
                android:id="@+id/Wed_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="3\nWED" />

            <Button
                android:id="@+id/Thu_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:onClick="ClicSFDate"
                android:text="4\nTHU" />

            <Button
                android:id="@+id/Fri_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="5\nFRI" />

            <Button
                android:id="@+id/Sat_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="6\nSAT" />

            <Button
                android:id="@+id/Sun_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/white"
                android:onClick="ClicSFDate"
                android:text="7\nSUN" />

            <ImageView
                android:id="@+id/Right_d2"
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/right_thin_chevron" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Another date:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Date 1"
                android:inputType="date" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Date 2"
                android:inputType="date" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:keepScreenOn="false"
        android:saveEnabled="false"
        app:srcCompat="@drawable/seperator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passegers"
        android:textAlignment="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                app:srcCompat="@drawable/kids_couple" />

            <EditText
                android:id="@+id/Count_of_childs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Number"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adult"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/female_and_male_shapes_silhouettes" />

            <EditText
                android:id="@+id/Count_of_adults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Number"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Infant"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                app:srcCompat="@drawable/crawling_baby_silhouette" />

            <EditText
                android:id="@+id/Count_of_infant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Number"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/BackCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/Striped_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/BackCircle"
            app:layout_constraintTop_toTopOf="@+id/BackCircle"
            app:srcCompat="@drawable/sroke" />

        <ImageView
            android:id="@+id/Plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/Striped_circle"
            app:layout_constraintTop_toTopOf="@+id/Striped_circle"
            app:srcCompat="@drawable/plane" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Plane"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Flight"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/func_menu"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/more" />

        <Button
            android:id="@+id/plan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Plan of trip" />
    </LinearLayout>


</LinearLayout>